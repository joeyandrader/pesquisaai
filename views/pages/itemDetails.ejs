<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<section class="bg-light">
  <div class="container pb-5">
    <div class="row">
      <div class="col-lg-5 mt-5">
        <div class="card mb-3">
          <img class="card-img img-fluid" src="/img/imgUpload/<%= itemDetail.image %>" alt="<%= itemDetail.name %>" id="product-detail">
        </div>

      </div>
      <!-- col end -->
      <div class="col-lg-7 mt-5">
        <div class="card">
          <div class="card-body">
            <h1 class="h2"> <i class="bi bi-box"></i> <%= itemDetail.name %></h1>
            <hr>
            <input type="hidden" id="address" value="<%= itemDetail.userId[0].address %> <%= itemDetail.userId[0].addressNumber %>">
            <input type="hidden" id="addressCity" value="<%= itemDetail.userId[0].county %>">
            <input type="hidden" id="addressDistrict" value="<%= itemDetail.userId[0].district %>">
            <ul class="list-inline">
              <li class="list-inline-item">
                <h6>Marca:</h6>
              </li>
              <li class="list-inline-item">
                <p class="text-muted"><strong><%= itemDetail.brand %></strong></p>
              </li>
            </ul>

            <h6>Descrição:</h6>
            <p><%- itemDetail.description %></p>
            <ul class="list-inline">
              <li class="list-inline-item">
                <h6>Cores disponiveis : </h6>
                <div class="cores">
                  <div class="cor red"></div>
                  <div class="cor blue"></div>
                  <div class="cor yellow"></div>
                </div>
              </li>
            </ul>
            <h6>Localização</h6>
            <div style="width: 100%; height: 300px" id="mapContainer"></div>
            <div class="btn-area">
              <div class="row">
                <div class="col-md-4">
                  <a href="<%= itemDetail.userId[0].webSite %>" target="_blank" class="btn btn-success">Visitar site</a>
                </div>
                <div class="col-md-4">
                  <a href="#" class="btn btn-primary">Contato da loja</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Close Content -->

<section class="py-5">
  <div class="container">
    <div class="row text-left p-2 pb-3">
      <h4>Produtos Relacionados</h4>
    </div>

    <!--Start Carousel Wrapper-->
    <div id="carousel-related-product">
      <div class="container">
        <div class="row">
          <% relatedProduct.forEach(relatedProduct => { %>

          <% if(relatedProduct.id !== itemDetail.id) {%>
          <% if(relatedProduct.approvedStatus == 'approved') {%>
          <div class="card-group col-lg-3">
            <div class="card">
              <img class="card-img-top" src="/img/imgUpload/<%= relatedProduct.image %>" alt="Company logo">
              <div class="card-body">
                <h5 class="card-title"><%= relatedProduct.name%></h5>
                <ul class="list-group">
                  <li class="list-group-item list-group-item-success bg-list-item"><i class="bi bi-briefcase" style="font-size:15px;"></i> <%= relatedProduct.userId[0].fantasyName %> </li>
                  <li class="list-group-item list-group-item-success bg-list-item"><i class="fa fa-map-marker" style="font-size:15px;"></i> <%= relatedProduct.userId[0].district %></li>
                  <li class="list-group-item list-group-item-success bg-list-item"><i class="fa fa-inr" style="font-size:20px;"></i> <%= relatedProduct.userId[0].county %></li>
                </ul>
              </div>
              <div class="card-button">
                <a type="button" href="/products/details/<%= relatedProduct.id %>" class="btn btn-primary m-auto w-100" id="left-panel-link"><i class="bi bi-eye"> Detalhes</i></a>
              </div>
            </div>
          </div>
          <% } %>
          <% } else { %>

          <% } %>
          <% }) %>
        </div>
      </div>
    </div>

  </div>
</section>

<script src="/js/maps.js"></script>

<%- include('../partials/footer') %>