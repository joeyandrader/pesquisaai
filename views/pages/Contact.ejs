<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="contact">
  <h1>Contato</h1>
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div class="contact-info">
          <h2>Contatos</h2>
          <p><i class="bi bi-envelope-fill"></i> <strong>email@exemplo.com</strong></p>
          <p><i class="bi bi-whatsapp"></i> <strong>+55 (34) 91234-1234</strong></p>
          <p><i class="bi bi-telephone-fill"></i> <strong>+55 (34) 1234-1234</strong></p>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="alert alert-success">Mensagem enviada com sucesso!</div>
        <div class="contact-form">
          <form method="POST" action="/register/save">
            <div class="container-form">
              <div class="input-row">
                <h2>Entre em contato!</h2>
                <div class="form-group">
                  <input class="form-control shadow-none" type="text" id="name" name="name" placeholder="Nome completo">
                  <div class="form-row mt-3">
                    <input class="form-control shadow-none" type="text" id="name" name="name" placeholder="Celular">
                    <input class="form-control shadow-none" type="email" id="email" name="email" placeholder="Email">
                  </div>
                </div>
                <div class="form-group mt-3">
                  <textarea class="form-control" rows="10" placeholder="Digite sua mensagem"></textarea>
                </div>
                <div class="form-group mt-3">
                  <button class="btn btn-primary w-100 mr-auto">Enviar mensagem</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>